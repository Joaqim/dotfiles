root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = false

# Ignore these files and paths
[*.{diff,patch,lock},/pkgs/_sources/**]
indent_size = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
